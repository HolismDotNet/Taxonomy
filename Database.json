{
    "name": "Taxonomy",
    "tables": [
        {
            "name": "Hierarchies",
            "hasGuid": true,
            "hasOrder": true,
            "hasSlug": true,
            "hasKey": true,
            "columns": [
                {
                    "name": "EntityTypeGuid"
                },
                {
                    "name": "Title"
                },
                {
                    "name": "ImageGuid",
                    "isNullable": true
                },
                {
                    "name": "IconGuid",
                    "isNullable": true
                },
                {
                    "name": "IconSvg",
                    "isNullable": true
                },
                {
                    "name": "ParentId",
                    "isNullable": true,
                    "cascadeDelete": true
                },
                {
                    "name": "Description",
                    "isNullable": true
                },
                {
                    "name": "IsActive",
                    "type": "boolean",
                    "isNullable": true
                },
                {
                    "name": "ItemsCount",
                    "type": "int",
                    "isNullable": true
                },
                {
                    "name": "Level",
                    "type": "int",
                    "isNullable": true
                },
                {
                    "name": "IsLeaf",
                    "type": "boolean",
                    "isNullable": true
                }
            ],
            "indexes": [
                {
                    "columns": [
                        "EntityTypeGuid",
                        "ParentId",
                        "Title"
                    ],
                    "isUnique": true
                }
            ]
        },
        {
            "name": "EntityHierarchies",
            "columns": [
                {
                    "name": "EntityGuid"
                },
                {
                    "name": "HierarchyId"
                }
            ],
            "indexes": [
                {
                    "columns": [
                        "EntityGuid",
                        "HierarchyId"
                    ],
                    "isUnique": true
                }
            ]
        },
        {
            "name": "Tags",
            "hasGuid": true,
            "hasSlug": true,
            "hasKey": true,
            "hasOrder": true,
            "columns": [
                {
                    "name": "EntityTypeGuid"
                },
                {
                    "name": "Name"
                },
                {
                    "name": "ImageGuid",
                    "isNullable": true
                },
                {
                    "name": "IconGuid",
                    "isNullable": true
                },
                {
                    "name": "IconSvg",
                    "isNullable": true
                },
                {
                    "name": "Description",
                    "isNullable": true
                },
                {
                    "name": "IsActive",
                    "type": "boolean",
                    "isNullable": true
                },
                {
                    "name": "ItemsCount",
                    "type": "int",
                    "isNullable": true
                }
            ],
            "indexes": [
                {
                    "columns": [
                        "EntityTypeGuid",
                        "Name"
                    ],
                    "isUnique": true
                }
            ]
        },
        {
            "name": "EntityTags",
            "columns": [
                {
                    "name": "EntityGuid"
                },
                {
                    "name": "TagId"
                }
            ],
            "indexes": [
                {
                    "columns": [
                        "EntityGuid",
                        "TagId"
                    ],
                    "isUnique": true
                }
            ]
        }
    ],
    "views": [
        {
            "name": "HierarchyViews",
            "query": [
                "with recursive R as (",
                "    select Id, ParentId, Title, '/' as Path",
                "    from Hierarchies",
                "    where ParentId is null",
                "    union all",
                "    select H.Id, H.ParentId, H.Title, Path + ('/' + H.Title) as Path",
                "    from Hierarchies H",
                "    inner join R",
                "    on H.ParentId = R.Id",
                ")",
                "select",
                "  h.*,",
                "  R.Path",
                "from R",
                "inner join Hierarchies h",
                "on R.Id = h.Id"
            ]
        },
        {
            "name": "EntityHierarchyViews",
            "query": [
                "select *",
                "from EntityHierarchies"
            ]
        },
        {
            "name": "EntityTagViews",
            "query": [
                "select",
                "  ti.*,",
                "  t.`Name` as TagName,",
                "  t.Guid as TagGuid",
                "from EntityTags ti",
                "inner join Tags t",
                "on ti.TagId = t.Id"
            ]
        }
    ]
}